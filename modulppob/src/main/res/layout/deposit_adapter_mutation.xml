<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvly_nominal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvw_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto"
        android:text="Topup Deposit 100.000 dengan komisi"
        android:textColor="@color/font_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txvw_date"
        android:text="10 Jan 2022, 10:00:01"
        android:layout_below="@+id/txvw_description"
        android:layout_alignStart="@+id/txvw_description"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="#606b73"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/txvw_changeBalance"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txvw_date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_vertical"
        android:text="+ Rp 10.000"
        android:textColor="@color/green"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txvw_currBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvw_changeBalance"
        android:layout_alignStart="@+id/txvw_date"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/txvw_lastBalance"
        android:fontFamily="@font/roboto"
        android:text="Saldo Sebelum Rp 20.000"
        android:textColor="@color/font_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txvw_lastBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvw_changeBalance"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto"
        android:text="Saldo setelah Rp 20.000"
        android:textColor="@color/font_color"
        android:textSize="13sp" />
    <View
        android:layout_below="@+id/txvw_lastBalance"
        android:layout_alignStart="@+id/txvw_date"
        android:background="#4c979797"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>