<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_activity"
    android:layout_height="match_parent"
    tools:context=".settings.pin.ActivationActivity">

    <com.rentas.ppob.component.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_below="@+id/header_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Silahkan selasaikan proses Aktivasi untuk transaksi PPOB"
                android:fontFamily="@font/roboto"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:background="#fff5e5"
                android:textColor="@color/font_color"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/font_color"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rvly_email"
                android:background="@color/white"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <EditText
                    android:id="@+id/txvw_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:hint="Pilih Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/font_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imvw_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_email_24"
                    app:tint="@color/font_color" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/font_color"
                android:text="Nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rvly_name"
                android:background="@color/white"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <EditText
                    android:id="@+id/edtx_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto"
                    android:hint="Nama"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/font_color"
                    android:textSize="15sp" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/font_color"
                android:text="Nomor Handphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rvly_phone"
                android:background="@color/white"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <EditText
                    android:id="@+id/edtx_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto"
                    android:hint="Nomor Handphone"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/font_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imvw_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/font_color" />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/font_color"
                android:text="Pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rvly_newPin"
                android:background="@color/white"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <EditText
                    android:id="@+id/edtx_newPin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto"
                    android:hint="Masukan 6 digit PIN"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/font_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imvw_show"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_eye_off" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/font_color"
                android:text="Konfirmasi Pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rvly_confirm"
                android:background="@color/white"
                android:padding="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <EditText
                    android:id="@+id/edtx_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto"
                    android:hint="Masukan 6 digit PIN"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/font_color"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/imvw_confirm"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_eye_off"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </RelativeLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Aktivasi Melaui OTP"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#ff8f00"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:id="@+id/lnly_email"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_email_unread_24"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="5dp"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#00c853"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:id="@+id/lnly_wa"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_baseline_whatsapp_24"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="5dp"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="WhatsApp"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>






</RelativeLayout>