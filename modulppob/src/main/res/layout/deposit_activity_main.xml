<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.rentas.ppob.component.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/lnly_info"
        android:background="#C4DEFB"
        android:orientation="vertical"
        android:layout_below="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Penting"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:textColor="#124074"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="10"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#124074"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="13sp"
                    android:text="1."
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#124074"
                    android:fontFamily="@font/roboto"
                    android:textSize="13sp"
                    android:text="Top-Up bisa di lakukan jika anda memiliki komisi."
                    android:layout_weight="9.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="2dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#124074"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="13sp"
                    android:text="2."
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#124074"
                    android:fontFamily="@font/roboto"
                    android:textSize="13sp"
                    android:text="Top-Up maksimal berdasarkan nilai maksimal komisi anda."
                    android:layout_weight="9.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="2dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#124074"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="13sp"
                    android:text="3."
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#124074"
                    android:fontFamily="@font/roboto"
                    android:textSize="13sp"
                    android:text="Top-Up Cash bisa dilakukan melalui Admin."
                    android:layout_weight="9.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        <View
            android:background="#C2C2C2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/lnly_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/font_color"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Informasi Saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="3dp"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.rentas.ppob.component.KeyValView
                        android:id="@+id/kv_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.rentas.ppob.component.KeyValView
                        android:id="@+id/kv_commission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/font_color"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Pilih Nominal Tpo-UP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvw_nominal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_empty"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#F1F1F1"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textColor="#de000000"
                    android:textSize="14sp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:gravity="center"
                    android:text="Komisi tidak cukup untuk Topup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>