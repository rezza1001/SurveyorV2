<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rvly_header"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txvw_title01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Promotor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txvw_promotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvw_title01"
            android:text="Promotor Name"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvw_titl02"
            android:layout_below="@+id/txvw_promotor"
            android:layout_marginTop="7dp"
            android:text="Jumlah Detail"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txvw_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvw_titl02"
            android:text="0"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rvly_header"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ImageView
        android:tint="@color/colorPrimary"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/righ_bih"
        android:layout_width="35dp"
        android:layout_height="35dp"/>



</RelativeLayout>