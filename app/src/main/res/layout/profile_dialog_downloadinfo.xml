<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6394151"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <RelativeLayout
       android:id="@+id/rvly_body_00"
       android:background="@color/white"
       android:layout_centerInParent="true"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txvw_title_00"
               android:text="Download Data"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:textStyle="bold"
               android:textColor="#000000"
               android:textSize="18sp"
               android:paddingRight="10dp"
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

            <com.wadaro.surveyor.ui.profile.TaskView
                android:id="@+id/task_assignment_00"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.wadaro.surveyor.ui.profile.TaskView
                android:id="@+id/task_assgmntdtl_00"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.wadaro.surveyor.ui.profile.TaskView
                android:id="@+id/task_survey_00"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.wadaro.surveyor.ui.profile.TaskView
                android:id="@+id/task_dtlsurvey_00"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/txvw_download_00"
               android:text="Are you sure?"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:textColor="#de000000"
               android:textSize="14sp"
               android:paddingRight="10dp"
               android:paddingLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <ProgressBar
               android:id="@+id/prgr_status_00"
               android:layout_marginTop="15dp"
               style="?android:attr/progressBarStyleHorizontal"
               android:indeterminate="false"
               android:layout_marginBottom="5dp"
               android:progress="10"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:progressDrawable="@drawable/download_progress"
               android:layout_width="match_parent"
               android:layout_height="10dp"/>
           <TextView
               android:id="@+id/txvw_status_00"
               android:text="Download... 0/0"
               android:textColor="#de000000"
               android:textSize="12sp"
               android:layout_gravity="end"
               android:layout_marginEnd="25dp"
               android:layout_marginBottom="25dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <Button
               android:id="@+id/bbtn_close_00"
               android:visibility="invisible"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:background="@drawable/ripple_btn"
               android:fontFamily="@font/raleway_semibold"
               android:text="Selesai"
               android:textAllCaps="false"
               android:textColor="@color/white" />

       </LinearLayout>

   </RelativeLayout>

</RelativeLayout>
