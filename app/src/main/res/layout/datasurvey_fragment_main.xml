<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Hasil Survey"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wadaro.surveyor.component.SelectView
                    android:id="@+id/slvw_date_00"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.wadaro.surveyor.component.SelectView
                    android:id="@+id/slvw_date_11"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#28000000"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:text="No.SO"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="85dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Tgl. Demo"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="85dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:text="Koordnator"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:text="JP"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Status"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Tgl. Survey"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="85dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvw_demo_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txvw_size_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total ada 0 titik survey"
                android:layout_marginTop="8dp"
                android:gravity="right" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
