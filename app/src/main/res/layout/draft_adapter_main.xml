<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rvly_body_00"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvw_so_00"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="COSAM/SO/01/0020011"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txvw_demo_00"
            android:layout_below="@+id/txvw_so_00"
            android:layout_marginTop="4dp"
            android:textColor="#de000000"
            android:textSize="12sp"
            android:text="Tgl Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txvw_delivery_00"
            android:layout_toEndOf="@+id/txvw_demo_00"
            android:layout_alignTop="@+id/txvw_demo_00"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:text="20 Juni 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/txvw_note_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvw_demo_00"
            android:text="Note"
            android:textColor="#de000000"
            android:textSize="12sp" />


       <TextView
           android:id="@+id/txvw_view_00"
           android:textColor="@color/colorPrimary"
           android:textStyle="bold"
           android:textSize="12sp"
           android:text="Lihat Survey"
           android:layout_marginEnd="10dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:layout_centerVertical="true"
           android:layout_alignParentEnd="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="#de000000"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/rvly_body_00"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</RelativeLayout>
