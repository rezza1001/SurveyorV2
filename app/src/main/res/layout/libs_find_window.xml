<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#B3000000"
    android:id="@+id/lnly_root_00"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/rvly_body_00"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvw_title_00"
                    android:layout_centerHorizontal="true"
                    android:text="Pilih"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:textColor="#de000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/view_line_00"
                    android:layout_below="@+id/txvw_title_00"
                    android:background="#28000000"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvw_find_00"
                    android:layout_below="@+id/view_line_00"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>
