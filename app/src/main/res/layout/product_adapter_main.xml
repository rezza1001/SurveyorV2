<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rvly_body_00"
        android:background="@drawable/shadow_product"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvw_image_00"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
        <TextView
            android:id="@+id/txvw_product_00"
            android:text="Blander Philips"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#de000000"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/imvw_image_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txvw_price_00"
            android:text="Rp 200.000"
            android:textColor="#fc6406"
            android:textSize="15sp"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@+id/txvw_product_00"
            android:layout_below="@+id/txvw_product_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
