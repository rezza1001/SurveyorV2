<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rvly_header_00"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/mrly_back_00"
            android:layout_width="56dp"
            android:layout_height="56dp">
            <ImageView
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </com.balysv.materialripple.MaterialRippleLayout>
        <TextView
            android:layout_toEndOf="@+id/mrly_back_00"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="Absensi"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="#80ffffff"
        android:layout_below="@+id/rvly_header_00"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@+id/rvly_header_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_name_00"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Mochamad Rezza Gumiling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txvw_staus_00"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:text="Surveyor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvw_profile_00"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <RelativeLayout
                android:id="@+id/rvly_body_00"
                android:background="@color/white"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txvw_date_00"
                    android:textColor="#de000000"
                    android:text="Minggu, 27 Sep 2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextClock
                    android:id="@+id/txvw_time_00"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_below="@+id/txvw_time_00"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txvw_company_00"
                        android:text="PT COSMA"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txvw_branch_00"
                        android:text="Cabang BOGOR"
                        android:textColor="#de000000"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Catatan"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp"
                        android:textColor="#de000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtx_note_00"
                        android:background="@drawable/shape_ev"
                        android:textSize="14sp"
                        android:lines="3"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/mrly_absent_00"
                        android:background="#219A0B"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:id="@+id/txvw_absent_00"
                            android:textStyle="bold"
                            android:text="CHECK IN"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
